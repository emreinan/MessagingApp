@model ChatDetailViewModel

<div class="modal fade" id="chatDetailModal" tabindex="-1" aria-labelledby="chatDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="chatDetailModalLabel">Grup Detay</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Sohbet Adı : @Model.Name</h6>

                @if (Model.InvitationCode is not null)
                {
                    <h6>Davet Kodu : @Model.InvitationCode</h6>
                }
                <h6>Üyeler (@Model.ChatUsers.Count) </h6>
                <ul>
                    @foreach (var user in Model.ChatUsers)
                    {
                        <li>@user.Nickname</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>